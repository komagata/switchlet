<!DOCTYPE html>
<html>
<head>
  <title>Switchlet - Feature Flags</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      margin: 0;
      padding: 16px;
      background: #fff;
      color: #333;
      line-height: 1.4;
    }
    .container {
      max-width: 1000px;
      margin: 0 auto;
    }
    h1 {
      font-size: 24px;
      font-weight: 600;
      margin: 0 0 24px 0;
      color: #000;
    }
    .alert {
      padding: 8px 12px;
      margin-bottom: 16px;
      border-radius: 3px;
      font-size: 14px;
    }
    .alert-success {
      background: #d4f7d4;
      color: #0d5016;
    }
    .alert-danger {
      background: #ffd6d6;
      color: #721c24;
    }
    .create-form {
      margin-bottom: 24px;
      padding: 16px;
      border: 1px solid #ddd;
      border-radius: 3px;
    }
    .create-form h2 {
      font-size: 16px;
      font-weight: 600;
      margin: 0 0 12px 0;
    }
    .form-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    .form-row {
      display: flex;
      gap: 8px;
      align-items: center;
    }
    .flag-name-input {
      flex: 0 0 200px;
    }
    .description-input-inline {
      flex: 1;
    }
    input, textarea {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 3px;
      font-size: 14px;
    }
    textarea {
      resize: vertical;
    }
    .btn {
      padding: 8px 12px;
      border: 1px solid #ccc;
      border-radius: 3px;
      background: #f8f8f8;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
      display: inline-block;
    }
    .btn:hover {
      background: #e8e8e8;
    }
    .btn-primary {
      background: #0969da;
      color: #fff;
      border-color: #0969da;
    }
    .btn-primary:hover {
      background: #0860ca;
    }
    .btn-success {
      background: #1a7f37;
      color: #fff;
      border-color: #1a7f37;
    }
    .btn-success:hover {
      background: #116329;
    }
    .btn-danger {
      background: #d1242f;
      color: #fff;
      border-color: #d1242f;
    }
    .btn-danger:hover {
      background: #a40e26;
    }
    .btn-sm {
      padding: 4px 8px;
      font-size: 12px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      border: 1px solid #ddd;
    }
    th, td {
      padding: 8px 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background: #f6f8fa;
      font-weight: 600;
      font-size: 14px;
    }
    .status-enabled {
      color: #1a7f37;
      font-weight: 600;
    }
    .status-disabled {
      color: #d1242f;
      font-weight: 600;
    }
    .actions {
      display: flex;
      gap: 4px;
      align-items: center;
    }
    .actions form {
      margin: 0;
    }
    .toggle-form {
      display: inline-block;
    }
    .toggle-switch {
      position: relative;
      display: inline-block;
      width: 44px;
      height: 24px;
      margin-right: 8px;
    }
    .toggle-switch input {
      opacity: 0;
      width: 0;
      height: 0;
    }
    .toggle-slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      transition: .3s;
      border-radius: 24px;
    }
    .toggle-slider:before {
      position: absolute;
      content: "";
      height: 18px;
      width: 18px;
      left: 3px;
      bottom: 3px;
      background-color: white;
      transition: .3s;
      border-radius: 50%;
    }
    .toggle-switch input:checked + .toggle-slider {
      background-color: #1a7f37;
    }
    .toggle-switch input:checked + .toggle-slider:before {
      transform: translateX(20px);
    }
    .toggle-switch input:focus + .toggle-slider {
      box-shadow: 0 0 0 2px rgba(26, 127, 55, 0.2);
    }
    .empty-state {
      text-align: center;
      padding: 48px 16px;
      color: #656d76;
    }
    .text-muted {
      color: #656d76;
    }
    .description-text {
      cursor: pointer;
      padding: 4px;
      border-radius: 3px;
      min-height: 16px;
    }
    .description-text:hover {
      background: #f6f8fa;
    }
    .description-input {
      width: 100%;
      margin-bottom: 8px;
    }
    .description-actions {
      display: flex;
      gap: 4px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üéõÔ∏è Switchlet - Feature Flags</h1>

    <% if notice %>
      <div class="alert alert-success"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger"><%= alert %></div>
    <% end %>

    <div class="create-form">
      <h2>Create New Flag</h2>
      <%= form_with url: switchlet.flags_path, local: true do |form| %>
        <div class="form-row">
          <%= form.text_field :flag_name, placeholder: "Flag name", required: true, class: "flag-name-input" %>
          <%= form.text_field :description, placeholder: "Optional description", class: "description-input-inline" %>
          <%= form.submit "Create Flag", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <% if @flags.empty? %>
      <div class="empty-state">
        <h3>No feature flags found</h3>
        <p>Create your first feature flag using the form above.</p>
      </div>
    <% else %>
      <table class="flags-table">
        <thead>
          <tr>
            <th>Flag Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Last Updated</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @flags.each do |flag| %>
            <tr>
              <td><strong><%= flag[:name] %></strong></td>
              <td>
                <div class="description-cell" data-flag="<%= flag[:name] %>">
                  <span class="description-text" onclick="editDescription('<%= flag[:name] %>')">
                    <% if flag[:description].present? %>
                      <%= flag[:description] %>
                    <% else %>
                      <span class="text-muted">Click to add description</span>
                    <% end %>
                  </span>
                  <div class="description-edit" style="display: none;">
                    <%= form_with url: switchlet.flag_path(flag[:name]), local: true, class: "description-form" do |form| %>
                      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                      <%= hidden_field_tag :_method, 'patch' %>
                      <%= form.text_area :description, value: flag[:description], rows: 2, 
                                        class: "description-input", 
                                        placeholder: "Enter description..." %>
                      <div class="description-actions">
                        <%= form.submit "Save", class: "btn btn-success btn-sm" %>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="cancelEdit('<%= flag[:name] %>')">Cancel</button>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td>
                <span class="<%= flag[:enabled] ? 'status-enabled' : 'status-disabled' %>">
                  <%= flag[:enabled] ? 'ENABLED' : 'DISABLED' %>
                </span>
              </td>
              <td><%= flag[:updated_at].strftime("%Y-%m-%d %H:%M") %></td>
              <td>
                <div class="actions">
                  <%= form_with url: switchlet.flag_path(flag[:name]), method: :patch, local: true, class: "toggle-form" do |form| %>
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <%= hidden_field_tag :action_type, 'toggle' %>
                    <label class="toggle-switch">
                      <%= check_box_tag "enabled", "1", flag[:enabled], 
                                        onchange: "this.form.submit()",
                                        class: "toggle-input" %>
                      <span class="toggle-slider"></span>
                    </label>
                  <% end %>
                  <%= button_to switchlet.flag_path(flag[:name]),
                              method: :delete,
                              class: "btn btn-danger btn-sm",
                              confirm: "Are you sure you want to delete '#{flag[:name]}'?" do %>
                    Delete
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

  <script>
    function editDescription(flagName) {
      const cell = document.querySelector(`[data-flag="${flagName}"]`);
      const textSpan = cell.querySelector('.description-text');
      const editDiv = cell.querySelector('.description-edit');
      const input = cell.querySelector('.description-input');
      
      textSpan.style.display = 'none';
      editDiv.style.display = 'block';
      input.focus();
      input.select();
    }

    function cancelEdit(flagName) {
      const cell = document.querySelector(`[data-flag="${flagName}"]`);
      const textSpan = cell.querySelector('.description-text');
      const editDiv = cell.querySelector('.description-edit');
      
      textSpan.style.display = 'block';
      editDiv.style.display = 'none';
    }

    // Escape key to cancel editing
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const activeEdit = document.querySelector('.description-edit[style*="block"]');
        if (activeEdit) {
          const flagName = activeEdit.closest('[data-flag]').dataset.flag;
          cancelEdit(flagName);
        }
      }
    });
  </script>
</body>
</html>